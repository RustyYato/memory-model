{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "memory model dsl",
	"patterns": [
		{
			"include": "#func_call"
		},
		{
			"include": "#number"
		},
		{
			"include": "#type"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#identifier"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\\b(let|drop|fn)\\b"
				},
				{
					"name": "entity.name.type",
					"match": "\\b(shr|exc)\\b"
				},
				{
					"name": "keyword.other.unit",
					"match": "\\b(_)\\b"
				}
			]
		},
		"type": {
			"patterns": [
				{
					"name": "keyword.control.less",
					"match": "\\b(read|write)\\b"
				}
			]
		},
		"number": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b([0-9]+)\\b"
				}
			]
		},
		"identifier": {
			"patterns": [
				{
					"name": "variable.name",
					"match": "\\b([\\w_0-9]+)\\b"
				}
			]
		},
		"comment": {
			"name": "comment.line.double-dash",
			"begin": "//",
			"end": "\n",
			"match": "//[^\n]*\n"
		}
	},
	"scopeName": "source.mmd"
}